<Window x:Class="WpfApp2.Debugging_Tools.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Debugging_Tools"
        mc:Ignorable="d"
        Title="DebugWindow" Height="500" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="debugTxtBlock" Grid.RowSpan="3" Grid.ColumnSpan="3" />
        <Button x:Name="excuteBtn" Grid.Row="3" Grid.Column="1" Content="Excute Code" FontSize="16"
                 FontWeight="Bold" Foreground="Black" Click="excuteBtn_Click"/>
        <Button x:Name="getCodeBtn" Grid.Row="3" Grid.Column="0" Content="Get Code" FontSize="16"
                 FontWeight="Bold" Foreground="Black" Click="getCodeBtn_Click"/>
    </Grid>
</Window>
